@model Pager

<div>
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="1" asp-route-sortCol="@ViewData["sortCol"]" asp-route-sortDir="@ViewData["sortDir"]">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.CurrentPage- 1)" asp-route-sortCol="@ViewData["sortCol"]" asp-route-sortDir="@ViewData["sortDir"]">Previous</a>
                </li>
            }


            @for (var pageNo = Model.StartPage; pageNo <= Model.EndPage; pageNo++)
            {
                <li class="page-item @(pageNo == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@pageNo" asp-route-sortCol="@ViewData["sortCol"]" asp-route-sortDir="@ViewData["sortDir"]"> @pageNo </a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.CurrentPage + 1)" asp-route-sortCol="@ViewData["sortCol"]" asp-route-sortDir="@ViewData["sortDir"]">Next</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.TotalPages)" asp-route-sortCol="@ViewData["sortCol"]" asp-route-sortDir="@ViewData["sortDir"]">Last</a>
                </li>
            }

        </ul>
    }
</div>